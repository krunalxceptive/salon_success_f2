# Salon Success Manager - Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Database Configuration
# For Docker: postgresql://salon_user:salon_password@postgres:5432/salon_success_manager
# For local: postgresql://username:password@localhost:5432/salon_success_manager
DATABASE_URL=postgresql://salon_user:salon_password@postgres:5432/salon_success_manager

# Session Security
# Generate a strong secret key for session encryption
SESSION_SECRET=your-super-secret-session-key-change-in-production

# ===========================================
# STRIPE PAYMENT CONFIGURATION
# ===========================================

# Stripe API Keys (Required for payment processing)
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# ===========================================
# EMAIL SERVICE CONFIGURATION
# ===========================================

# SendGrid (Primary email service)
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Gmail SMTP (Alternative email service)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASS=your_app_password_here

# Ionos SMTP (Alternative email service)
IONOS_USER=your_ionos_email@yourdomain.com
IONOS_PASS=your_ionos_password_here

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Admin panel password
ADMIN_PASSWORD=admin123

# ===========================================
# MARKETING AUTOMATION (OPTIONAL)
# ===========================================

# ActiveCampaign Integration
# Get these from: https://www.activecampaign.com/api/
ACTIVECAMPAIGN_API_KEY=your_activecampaign_api_key_here
ACTIVECAMPAIGN_API_URL=https://your_account.api-us1.com
ACTIVECAMPAIGN_LIST_ID=your_list_id_here

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Node Environment
NODE_ENV=development

# Application Port
PORT=8080

# ===========================================
# DOCKER SPECIFIC CONFIGURATION
# ===========================================

# Database connection for Docker
# This is automatically set in docker-compose.yml
# DATABASE_URL=postgresql://salon_user:salon_password@postgres:5432/salon_success_manager

# ===========================================
# NOTES
# ===========================================

# 1. Copy this file to .env: cp env.example .env
# 2. Update all the values above with your actual credentials
# 3. Never commit the .env file to version control
# 4. For production, use strong, unique secrets
# 5. Test your Stripe keys in test mode first
# 6. Ensure your email service is properly configured
